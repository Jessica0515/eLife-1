<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    tools:context=".PersonalInformation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/themeDark5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/themeDark5"
            android:orientation="horizontal">

            <Button
                android:layout_weight="15"
                android:id="@+id/personInfoBack"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:background="@drawable/previous_page"
                android:backgroundTint="@color/themeWord1"
                />

            <TextView
                android:layout_weight="85"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:layout_marginLeft="0dp"
                android:text="個人資料"
                android:textColor="@color/themeWord1"
                android:textSize="24sp"
                android:textStyle="bold" />
            <!-- 按鈕icon不會改顏色-->
            <Button
                android:layout_weight="15"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginRight="13dp"
                android:background="#00000000"
                android:gravity="center"

                android:textColor="@color/themeDark1"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="28dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="20dp"
            card_view:cardBackgroundColor="@color/white">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginBottom="10dp"
                    app:srcCompat="@drawable/user" />
                <!--  <a href="https://www.flaticon.com/free-icons/profile" title="profile icons">Profile icons created by Bingge Liu - Flaticon</a>-->
                <!--有設定圖片在center卻沒有反應-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/infoName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="10dp"
                    android:text="王宣荏"
                    android:textColor="@color/inContext"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="240dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    app:cardBackgroundColor="@color/themeDark5"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">

                    <TextView
                        android:id="@+id/infoPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="5.5dp"
                        android:layout_marginBottom="5.5dp"
                        android:text="+886 987654321"
                        android:textSize="17dp">

                    </TextView>


                </androidx.cardview.widget.CardView>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="個人檔案"
            android:textSize="19dp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="20dp"
            card_view:cardBackgroundColor="@color/white">



        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="0dp"
                        android:text="使用者名稱"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/infoName2"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="30dp"
                        android:text="王宣荏"
                        android:textColor="@color/inContext"
                        android:textSize="18dp"
                        android:textStyle="bold" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.1dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="15dp"
                    android:background="@color/inContext" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="12dp"
                        android:text="聯絡電話"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/infoPhone2"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="40dp"
                        android:text="+886 987654321"
                        android:textColor="@color/inContext"
                        android:textSize="18dp"
                        android:textStyle="bold" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.1dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="15dp"
                    android:background="@color/inContext" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="12dp"
                        android:text="住戶地址"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/infoAddr"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="40dp"
                        android:text="新北市淡水區英專路151號B310"
                        android:textColor="@color/inContext"
                        android:textSize="18dp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.1dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="15dp"
                    android:background="@color/inContext" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="12dp"
                        android:text="電子信箱"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/infoEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="40dp"
                        android:text="tku123@gmail.com"
                        android:textColor="@color/inContext"
                        android:textSize="18dp"
                        android:textStyle="bold" />
                </RelativeLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <!--layout_gravity="center"左右置中-->
    <!-- 色號1 c5956f 色號2 e0c395-->


</androidx.constraintlayout.widget.ConstraintLayout>