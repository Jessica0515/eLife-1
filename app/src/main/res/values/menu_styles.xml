<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="sensor">
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_width">104dp</item>
        <item name="android:layout_height">75dp</item>

    </style>

    <style name="sensorNum">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="sensorPa">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">73dp</item>
        <item name="android:layout_marginTop">41dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:text">%</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="functionButton">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">95dp</item>
        <item name="android:layout_margin">9dp</item>
        <item name="background">@drawable/menu</item>
        <item name="android:textColor">@color/themeDark1</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="openDoor">
        <item name="android:textColor">@color/themeDark1</item>
        <item name="android:textSize">23sp</item>
    </style>
</resources>